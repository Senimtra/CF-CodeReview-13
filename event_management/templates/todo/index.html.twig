{% extends 'base.html.twig' %}
{% block body %}
    <div class="container content p-3">
        <div class="row">

            {# ### Looping through todo to get the values from all records ### #}
            
            {% for todo in todos %}

            <div class="col-4 d-flex">
                <div class="card text-center p-2 mb-3">
                    <img src="{{todo.image}}" class="card-img-top" alt="...">
                    <div class="card-body mt-2">
                        <h5 class="card-title">{{todo.name}}</h5>
                        <p class="card-text">Price:&nbsp; â‚¬ {{todo.price|number_format(2)}}<br>
                        {{todo.date|date('d/m/Y, H:i')}}</p>
                        <div class="card card-address mb-1"><i>{{todo.address}}</i></div>
                        <p class="card-text"><small>{{todo.description|slice(0, 50)}}...</small></p>

                        {# ### CRUD-buttons details/edit/delete ### #}

                        <div class="btn-group flex-wrap align-self-end">
                            <a href="/details/{{todo.id}}" class="btn btn-sm btn-crud active" aria-current="page">View</a>
                            <a href="/edit/{{todo.id}}" class="btn btn-sm btn-crud">Edit</a>
                            <a href="/delete/{{todo.id}}" class="btn btn-sm btn-crud">Delete</a>
                        </div>

                    </div>
                </div>
            </div>

            {% endfor %}

        </div>
    </div>

{% endblock %}