{% extends 'base.html.twig' %}
{% block body %}
<div class="container content p-3">
    <div class="card p-3">
        <img src="{{todo.image}}" class="card-img-top" alt="{{todo.name}}-image">
        <div class="card-body my-3">
            <h1 class="card-text">{{todo.name}}</h1>
            <h5 class="card-text">{{todo.date|date('F j, Y, g:i a')}} | Capacity: {{todo.capacity}}
             | {{todo.type}} | Price:&nbsp; â‚¬ {{todo.price|number_format(2)}}</h5>
            <div class="card card-details p-2 px-3 mt-2 mb-3">{{todo.description}}</div>
            <p class="card-text">E-mail: {{todo.email}} | Phone: {{todo.phone}}</p>
            <p class="card-text">{{todo.address}}</p>
            <a href="#">{{todo.url}}</a>
        </div>
        <a href="/"><button class="btn btn-danger">Home</button></a>
    </div>
</div>
{% endblock %}